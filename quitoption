import tkinter as tk
from sys import exit
    

def write_slogan():
    print("Phone Client Stoped")
    exit(0) #
    

root = tk.Tk()
frame = tk.Frame(root)
frame.pack()

button = tk.Button(frame, 
                   text="CALL AGAIN", 
                   command=quit)
button.pack(side=tk.LEFT)
slogan = tk.Button(frame,
                   text="QUIT",
                    fg="red",
                   command=write_slogan)
slogan.pack(side=tk.LEFT)
root.mainloop()

